<div class="container" data-controller="drawing">
  <section class="tools-board">
    <div class="row">
      <label class="title text-center">Undo/Redo</label>
      <ul class="options">
        <li class="option tool" id="undo" data-drawing-target="undoRedoBtn" data-tool="undo">
          <%= show_svg('undo.svg') %>
          <span>Undo</span>
        </li>
        <li class="option tool" id="redo" data-drawing-target="undoRedoBtn" data-tool="redo">
          <%= show_svg('redo.svg') %>
          <span>Redo</span>
        </li>
      </ul>
    </div>
    <div class="row">
      <label class="title">Shapes</label>
      <ul class="options">
        <li class="option tool" id="rectangle" data-drawing-target="toolBtn" data-tool="rectangle">
          <%= show_svg('rectangle.svg') %>
          <span>Rectangle</span>
        </li>
        <li class="option tool" id="circle" data-drawing-target="toolBtn" data-tool="circle">
          <%= show_svg('circle.svg') %>
          <span>Circle</span>
        </li>
        <li class="option tool" id="triangle" data-drawing-target="toolBtn" data-tool="triangle">
          <%= show_svg('triangle.svg') %>
          <span>Triangle</span>
        </li>
        <li class="option">
          <input type="checkbox" id="fill-color"  data-drawing-target="fillColor">
          <label for="fill-color">Fill color</label>
        </li>
      </ul>
    </div>
    <div class="row">
      <label class="title">Options</label>
      <ul class="options">
        <li class="option active tool" id="brush" data-tool="brush" data-drawing-target="toolBtn">
          <%= show_svg('brush.svg') %>
          <span>Brush</span>
        </li>
        <li class="option tool" id="eraser" data-tool="eraser" data-drawing-target="toolBtn">
          <%= show_svg('eraser.svg') %>
          <span>Eraser</span>
        </li>
        <li class="option">
          <input type="range" id="size-slider" min="1" max="30" value="5" data-drawing-target="sizeSlider">
        </li>
      </ul>
    </div>
    <div class="row colors">
      <label class="title">Colors</label>
      <ul class="options">
        <li class="option" data-drawing-target="colorBtn"></li>
        <li class="option selected" data-drawing-target="colorBtn"></li>
        <li class="option" data-drawing-target="colorBtn"></li>
        <li class="option" data-drawing-target="colorBtn"></li>
        <li class="option" data-drawing-target="colorBtn">
          <input type="color" id="color-picker" value="#4A98F7" data-drawing-target="colorPicker">
        </li>
      </ul>
    </div>
    <div class="row buttons">
      <button class="clear-canvas" data-drawing-target="clearCanvas">Clear Canvas</button>
      <button class="save-img" data-drawing-target="saveImg">Save As Image</button>
    </div>
  </section>
  <section class="drawing-board">
    <canvas id="canvas" data-drawing-target="canvas"></canvas>
  </section>
</div>